<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        mc:Ignorable="d"
        Icon="assets/calc.ico"
        Title="Calculadora"
        Height="579"
        Width="455"
        MinHeight="300"
        MinWidth="250">
    <Grid Margin="5">
        <!--Creo las filas y columnas-->
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <!--Tamaño más pequeño a la última fila-->
            <RowDefinition Height="55"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Añado borde a toda la pantalla del text block junto con las propiedades del Grid-->
        <Border BorderBrush="Black"
                Margin="5"
                BorderThickness="1"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.RowSpan="2">
            <!--Viewbox para que se vean todas las cifras en la pantalla-->
            <Viewbox HorizontalAlignment="Right">
                <TextBlock x:Name="PantallaTextBlock"
                           HorizontalAlignment="Right"></TextBlock>
            </Viewbox>
        </Border>
        <!--Añado botones con Tag y con evento click-->
        <Button Grid.Column="0"
                Grid.Row="2"
                Tag="1"
                Click="Button_Click"
                Margin="5">
            <!--Viewbox para ajustar el tamaño de los números según las dimensiones-->
            <Viewbox>
                <Label>1</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="1"
                Grid.Row="2"
                Tag="2"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>2</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="2"
                Grid.Row="2"
                Tag="3"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>3</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="0"
                Grid.Row="3"
                Tag="4"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>4</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="1"
                Grid.Row="3"
                Tag="5"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>5</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="2"
                Grid.Row="3"
                Tag="6"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>6</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="0"
                Grid.Row="4"
                Tag="7"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>7</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="1"
                Grid.Row="4"
                Tag="8"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>8</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="2"
                Grid.Row="4"
                Tag="9"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>9</Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="0"
                Grid.Row="5"
                Grid.ColumnSpan="3"
                Tag="0"
                Click="Button_Click"
                Margin="5">
            <Viewbox>
                <Label>0</Label>
            </Viewbox>
        </Button>
    </Grid>
</Window>
